[aspectratio] 
  position: relative
  &::before 
    content: ''
    display: block 
    width: 1px
    margin-left: -1px
    height: 0 
    
  [aspectratio-content] 
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    width: 100%
    height: 100%
/* --- elevation --- */

.elevation-1
  box-shadow: 
    0 2px 1px -1px rgba(0,0,0,.2),
    0 1px 1px 0 rgba(0,0,0,.14),
    0 1px 3px 0 rgba(0,0,0,.12)

.elevation-2
  box-shadow: 
    0 3px 1px -2px rgba(0,0,0,.2),
    0 2px 2px 0 rgba(0,0,0,.14),
    0 1px 5px 0 rgba(0,0,0,.12)

.elevation-3
  box-shadow: 
    0 3px 3px -2px rgba(0,0,0,.2),
    0 3px 4px 0 rgba(0,0,0,.14),
    0 1px 8px 0 rgba(0,0,0,.12)

.elevation-4
  box-shadow: 
    0 2px 4px -1px rgba(0,0,0,.2),
    0 4px 5px 0 rgba(0,0,0,.14),
    0 1px 10px 0 rgba(0,0,0,.12)

.elevation-5
  box-shadow: 
    0 3px 5px -1px rgba(0,0,0,.2),
    0 5px 8px 0 rgba(0,0,0,.14),
    0 1px 14px 0 rgba(0,0,0,.12)

// level 1 to level 5
.elevation-hover
  box-shadow: 
    0 2px 1px -1px rgba(0,0,0,.2),
    0 1px 1px 0 rgba(0,0,0,.14),
    0 1px 3px 0 rgba(0,0,0,.12)

  &:hover,
  &:active
    box-shadow: 
      0 3px 5px -1px rgba(0,0,0,.2),
      0 5px 8px 0 rgba(0,0,0,.14),
      0 1px 14px 0 rgba(0,0,0,.12)

.elevation-clear
  box-shadow 0 0 rgba(0,0,0,0)
  &:hover,
  &:active
    box-shadow:
      0 1px 3px rgba(0,0,0,.2),
      0 1px 1px rgba(0,0,0,.14),
      0 2px 1px -1px rgba(0,0,0,.12)

/* --- 场景道具  --- */
button
  border-style: solid
  &.block-btn
    display block
    width: 100%
  &.material-icons
    height 45px
    width: 45px
    font-size 24px
    border-radius: 50%
    padding: 0
  &.btn
    @extend .elevation-3
    cursor pointer
    align-items: center
    border-radius: 2pt
    color #ffffff
    display: inline-flex
    font-weight: 400
    flex: 0 1 auto
    vertical-align: middle;
    justify-content: center;
    text-decoration: none;
    font-size: 14pt;
    height: 36pt;
    min-width: 88pt;
    outline: 0;
    margin: space-util(0)
    user-select: none;
    position: relative;
    transition: .3s cubic-bezier(.25,.8,.5,1),color 1ms;
    &:active
      @extend .elevation-5
    &.primary
      background-color: abc-primary
      border-color: abc-primary
    &.blue
      background-color: abc-blue
      border-color: abc-blue
    &.round
      border-radius: 28pt


// 点击动画
@keyframes ripple-out
  to
    opacity: 0
    top: -6px
    left: -6px
    bottom: -6px
    right: -6px
    border-width: 6px

.btn-click
  position: relative
  &.round
    &::before
      border-radius: 28pt
  &.primary
    &::before
      border-color: lightness(abc-primary, 80%)
  &.blue
    &::before
      border-color: lightness(abc-blue, 80%)
  &::before
    content: ''
    position: absolute
    border: 0 solid currentColor
    border-radius: 5px
    top -1px
    bottom: -1px
    left -1px
    right: -1px
    transition-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
    animation-duration 0.4s
    animation-name: ripple-out


.cursor-pointer
  cursor pointer

.cursor-wait
  cursor wait
  user-select: none

 /* --- divider --- */
.nav-gap
  position: relative;
  width: 1px;
  height: 100%;
  min-height: 60px;
  padding: 0 20px;
  &::before
    content: "";
    position: absolute;
    top: calc(50% - 8px);
    width: 1px;
    height: 16px;
    background: #ebebeb;

.divider
  margin: space-util(1) 0
  height: 1px
  width: 100%
  background-color: border-color-primary

.abc-navbar
  display flex
  align-items: center
  height: 45px
  background-color: #fff


