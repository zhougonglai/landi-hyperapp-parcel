/* --- display --- */ 
.d-flex
  display: flex
  flex-direction: column
  align-items: center
.d-inline-flex
  display: inline-flex
.d-block
  display: block
.d-inline-block
  display: inline-block
.column
  flex-direction: column
.row
  flex-direction: row

.span-1
  flex 1 
.span-2
  flex 2
.span-3
  flex 3

.flexble
  display: flex
  flex-direction: column
  
.text-center
  text-align: center
.flex-start
  @extend .d-flex
  justify-content: flex-start
.flex-center
  @extend .d-flex
  justify-content: center
.flex-left-center
  @extend .flexble
  align-items: flex-start
  justify-content: center
.flex-right-center
  @extend .flexble
  align-items: flex-end
  justify-content: center

.flex-end
  @extend .d-flex
  justify-content: flex-end
.flex-fill
  align-items: stretch
