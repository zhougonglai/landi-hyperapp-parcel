  }
  100% {
    transform: scale(0.5);
    transform-origin: 0% 0%;
  }
}

@keyframes scale-down-hor-center {
  0% {
    transform: scaleX(1);
  }
  100% {
    transform: scaleX(0.3);
  }
}

