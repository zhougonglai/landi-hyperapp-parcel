/* --- display --- */ 
.flexble
  display: flex
  flex-direction: column
.d-flex
  @extend .flexble
  align-items: center
.d-inline-flex
  display: inline-flex
.d-block
  display: block
.d-inline-block
  display: inline-block
.wrap
  flex-wrap: wrap
.row
  flex-direction: row
  @extend .wrap

.span-1
  flex 1 
.span-2
  flex 2
.span-3
  flex 3

.align-content-stretch
  align-content: stretch
.align-content-start
  align-content: flex-start
.align-content-end
  align-content: flex-end
.align-content-center
  align-content: center
.align-content-between
  align-content: space-between
.align-content-around
  align-content: space-around
.align-items-start
  align-items: flex-start
.align-items-end
  align-items: flex-end
.align-items-center
  align-items: center
.align-items-baseline
  align-items: baseline
.align-items-stretch
  align-items: stretch

.align-self-start
  align-self: flex-start
.align-self-end
  align-self: flex-end
.align-self-center
  align-self: center
.align-self-baseline
  align-self: baseline
.align-self-stretch
  align-self: stretch

.justify-content-start
  justify-content flex-start
.justify-content-end
  justify-content: flex-end
.justify-content-center
  justify-content: center
.justify-content-between
  justify-content: space-between
.justify-content-around
  justify-content: space-around

.grow-0
  flex-grow: 0
.grow-1
  flex-grow: 1
.grow-2
  flex-grow: 2
.shrink-0
  flex-shrink: 0
.shrink-1
  flex-shrink: 1
.shrink-2
  flex-shrink: 2
.order-0
  order 0
.order-1
  order 1
.order-fist
  order: -1

.text-center
  text-align: center
.flex-start
  @extend .d-flex
  justify-content: flex-start
.flex-center
  @extend .d-flex
  justify-content: center
.flex-left-center
  @extend .flexble
  align-items: flex-start
  justify-content: center
.flex-right-center
  @extend .flexble
  align-items: flex-end
  justify-content: center

.flex-end
  @extend .d-flex
  justify-content: flex-end
.flex-fill
  align-items: stretch
