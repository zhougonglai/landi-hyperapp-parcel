/**  样式命名风格
  *  .block{}           组件样式
  *  .block__element{}  组件节点样式
  *  .block--modifier{} 组件节点状态
  */
[aspectratio]
  position: relative
  &:before
    content:''
    display: block
    width: 1px
    margin-left: 1px
    height: 0
  [aspectratio-content]
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    width: 100%
    height: 100%
