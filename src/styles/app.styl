/* --- animate --- */
[class*=elevation-]
  transition: box-shadow 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

@keyframes placeHolderShimmer{
    0%{
      background-position: -468px 0
    }
    100%{
      background-position: 468px 0
    }
  }

.animated-background
  animation-duration: 1s;
  animation-fill-mode: forwards;
  animation-iteration-count: infinite;
  animation-name: placeHolderShimmer;
  animation-timing-function: linear;
  background: #f6f7f8;
  background: linear-gradient(to right, #eeeeee 8%, #dddddd 18%, #eeeeee 33%);
  background-size: 800px 104px;
  position: relative;

.underdash
  background-image: linear-gradient(90deg,rgba(0,0,0,0.38) 0,rgba(0,0,0,0.38) 33%,transparent 0);
  background-position: bottom calc(50% - 24px) left 0;
  background-size: 4px 1px;
  background-repeat: repeat-x;

/* --- 引用块 --- */
.blockquote
  display: block
  border-left 3px solid abc-blue
  border-radius: 3px
  background: linear-gradient(to right, abc-blue ,rgba(abc-blue,0.6))
  padding: space-util(0) space-util(1)
  box-sizing: border-box
  .header
    color grey-lighten-4
    font-size: 14pt
    font-weight: bold
  .describe
    font-size 12pt
    color grey-lighten-4

/* --- 小标题 --- */
.title
  @extend .pa-0
  font-size 14pt
  font-weight: bold
  white-space: nowrap;
  vertical-align: middle;
  line-height: 40px;
  padding-left: space-util(1)
  height: 60px;
  box-sizing: border-box;
  &::after
    user-select none
    margin-left: space-util(2);
    content: '';
    display: inline-block;
    vertical-align: middle;
    width: calc(100% - 25px);
    max-width: 200px;
    height: 1px;
    background: linear-gradient(to right, abc-blue, transparent 80%);
  .tools
    @extend .d-inline-block
    float: right